{
    "name": "git-visualize",
    "type": "module",
    "version": "0.0.1",
    "description": "A CLI tool to visualize git repositories.",
    "bin": {
        "git-visualize": "./dist/index.js"
    },
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "pkgroll --minify",
        "start": "node dist/index.js",
        "preinstall": "npx only-allow pnpm",
        "test": "tsx --test"
    },
    "keywords": [
        "git",
        "chart",
        "analyze",
        "data science",
        "cli",
        "repository"
    ],
    "author": "acandoo",
    "license": "ISC",
    "devDependencies": {
        "pkgroll": "^2.13.1",
        "tsx": "^4.20.3"
    },
    "dependencies": {
        "@commander-js/extra-typings": "^14.0.0",
        "@observablehq/plot": "^0.6.17",
        "@types/cli-progress": "^3.11.6",
        "@types/jsdom": "^21.1.7",
        "chart.js": "^4.5.0",
        "cli-progress": "^3.12.0",
        "commander": "^14.0.0",
        "isomorphic-git": "^1.32.1",
        "jsdom": "^26.1.0",
        "puppeteer": "^24.11.1",
        "skia-canvas": "^2.0.2"
    }
}
